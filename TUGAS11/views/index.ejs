<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Daftar Produk</title>
  <link rel="stylesheet" href="/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <div class="container">
    <h2 class="mb-3">Daftar Produk</h2>
    <a href="/tambah" class="btn btn-primary mb-3">+ Tambah Produk</a>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Nama Produk</th>
          <th>Deskripsi</th>
          <th>Harga</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% rows.forEach((produk) => { %>
          <tr>
            <td><%= produk.nama %></td>
            <td><%= produk.deskripsi %></td>
            <td>Rp <%= produk.harga %></td>
            <td>
              <a href="/edit/<%= produk.id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/hapus/<%= produk.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Hapus data?')">Hapus</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
